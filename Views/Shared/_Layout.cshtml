<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" 
        type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" 
        type="text/javascript"></script>
</head>
<body>
    <div id="container">
        <div id="header">
            <h1>
                <a href="/">ASP.NET MVC MUSIC STORE</a></h1>
            <div id="headerMenus">
                <ul id="navlist">
                    <li class="first"><a href="@Url.Content("~")" id="current">Home</a></li>
                    <li><a href="@Url.Content("~/Store/")">Store</a></li>
                    <li>
                        @{Html.RenderAction("CartSummary", "ShoppingCart");}
                    </li>
                    @if (User.IsInRole("Admin")) {
                      <li><a href="@Url.Content("~/StoreManager/")">Admin</a></li>
                    }
                </ul>
                <div id="loginDisplay">
                    @Html.Partial("LoginView")</div>
            </div>
        </div>
        <div id="leftHandNavigation">
            @{Html.RenderAction("GenreMenu", "Store");}
            <div id="searchAlbums">            
                <a href="@Url.Content("~/Home/AlbumsSearch")">Search Albums</a>
            </div>
        </div>
        <div id="main">
            @RenderBody()                        
        </div>
    </div>
    <div id="footer">
        built with <a href="http://asp.net/mvc">ASP.NET MVC 3 (Upgraded to MVC4)</a>
    </div>
</body>
</html>
